<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HorizontalPanel styleName="login-formouter">
		<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">

			<g:HTMLPanel styleName="login-card">
				<g:VerticalPanel styleName="login-textouter">
					<g:HTML styleName="loginTitle">
						<!-- <span class="loginLogo">
							<em class="loginLogoBig">SIM</em>biosis
						</span> -->
						Login
					</g:HTML>
					<g:HorizontalPanel styleName="login-textouter">
						<g:HTMLPanel styleName="login-symbol">
							<i class="fa fa-user fa-2x fa-fw" />
						</g:HTMLPanel>
						<g:TextBox styleName="login-textbox" ui:field="userName" />
					</g:HorizontalPanel>

					<g:HorizontalPanel styleName="login-textouter">
						<g:HTMLPanel styleName="login-symbol">
							<i class="fa fa-lock fa-2x fa-fw" />
						</g:HTMLPanel>
						<g:PasswordTextBox styleName="login-textbox"
							ui:field="password" />
					</g:HorizontalPanel>
					<g:HorizontalPanel styleName="login-messagebox"
						ui:field="messageHolder" />
					<g:Button styleName="login-submit" ui:field="loginSubmit">Masuk</g:Button>
				</g:VerticalPanel>
			</g:HTMLPanel>

		</g:cell>
	</g:HorizontalPanel>

</ui:UiBinder> 